@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-primary top">
    <div class="panel-heading header-color">
        Update Blog Topic
    </div>
    <div class="panel-body">
        <form class="form-horizontal" method="post" action="/BlogTopic/Update/@Model.TopicId">
            <div class="form-group">
                <label class="control-label col-sm-2" for="TopicName">Topic Name:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="TopicName" id="TopicName" value="@Model.TopicName" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="submit" value="Update" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>
<a href="/BlogTopic/List" class="btn btn-primary headtop">Cancel</a>
