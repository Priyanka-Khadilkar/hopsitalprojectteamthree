@model HospitalProjectTeamThree.Models.CardDesign
@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this card?</h2>
<div class="row">
    <div class="col-md-4 col-sm-4">
        <img src="~/Images/GetWellCard/@(Model.CardDesignId).@(Model.PicExt)" />
    </div>
    <div class="col-md-8 col-sm-8">
        <form method="Post" action="/CardDesign/Delete/@Model.CardDesignId">
            <input type="hidden" name="CardDesignId" value="@Model.CardDesignId" />
            <input type="submit" value="Yes" class="btn btn-warning"/>
            <a href="/CardDesign/List">No, go back to list</a>
        </form>
    </div>

</div>
