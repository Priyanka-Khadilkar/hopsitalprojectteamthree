@model HospitalProjectTeamThree.Models.ViewModels.AddBlogTopic

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-primary top">
    <div class="panel-heading header-color">
        New Blog Entry
    </div>
    <div class="panel-body">
        <form class="form-horizontal" method="post" action="/DoctorsBlog/Add">
            <div class="form-group">
                <label class="control-label col-sm-2" for="BlogTitle">Blog Title:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="BlogTitle" id="BlogTitle" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="BlogContent">Blog Content:</label>
                <div class="col-sm-10">
                    <textarea  rows="15" id="BlogContent" class="form-control" name="BlogContent" required></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="BlogSource">Blog Source:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="BlogSource" id="BlogSource" required/>
                </div>
            </div>
            <div>
                <input type="hidden" name="User_Id" value="@Model.User.Id" />
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="submit" value="Add Blog Entry" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>
<a href="/DoctorsBlog/List" class="btn btn-primary headtop">Back to list</a>


