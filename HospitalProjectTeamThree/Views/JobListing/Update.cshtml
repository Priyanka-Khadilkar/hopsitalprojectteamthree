@model HospitalProjectTeamThree.Models.ViewModels.UpdateJobListing
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="panel panel-primary top">
    <div class="panel-heading heading-color">
        <h2>Update @Model.JobListing.JobTitle</h2>
    </div>
    <div class="panel-body"></div>
    <form class="form-horizontal" enctype="multipart/form-data" method="post" action="/JobListing/Update/@Model.JobListing.JobID">
        <div class="form-group">
            <label class="control-label col-sm-2" for="JobTitle">Title:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="JobTitle" id="JobTitle" value="@Model.JobListing.JobTitle" placeholder="Enter Job Title" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="JobDescription">Description: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="JobDescription" id="JobDescription" value="@Model.JobListing.JobDescription" placeholder="Please enter a brief description of the job" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="Salary">Salary:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Salary" id="Salary" value="@Model.JobListing.Salary" placeholder=" e.g. $500" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="StartDate"> Start Date</label>
            <div class="col-sm-10">
                <input type="datetime" class="form-control" value="@Model.JobListing.StartDate" name="StartDate" id="StartDate" />
            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-sm-2" for="published"> Published </label>
            <div class="col-sm-10">
                <input id="publishedYes" type="radio" name="published" value="yes" @(Model.JobListing.Published == "yes" ? "checked='true' " : "") />Yes


                <input id="publishedNo" type="radio" name="published" value="no" @(Model.JobListing.Published == "no" ? "checked='true' " : "") />No
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Department</label>
            <div class="col-sm-10">
                <select id="DepartmentID" name="DepartmentID">
                    @foreach (var department in Model.Departments)
                    {
                        var selected = "";
                        if (Model.JobListing.DepartmentID == department.DepartmentId)
                        {
                            selected = "selected";
                        }
                        <option value="@department.DepartmentId" @selected>@department.DepartmentName</option>
                    }
                    }
                </select>
            </div>
        </div>


        

        <div><input type="hidden" name="userID" value="@Model.User.Id" /></div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-success" value="Update" />
            </div>
        </div>


    </form>
</div>



<a href="/JobListing/List" class="btn btn-primary headtop">Back to list</a>






@section Scripts {
    <script>
        $(function () {
            $("#StartDate").datepicker();
        })


    </script>
}



