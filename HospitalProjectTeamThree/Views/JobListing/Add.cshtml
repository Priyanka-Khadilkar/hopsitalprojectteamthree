@model List<HospitalProjectTeamThree.Models.Department>



@{
    ViewBag.Title = "Add";
        Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Add a Job Listing</h2>
<form class="add" method="post" action="/JobListing/Add">

    <div>Job Title: <input type="text" name="JobTitle" id="JobTitle" /></div>
    <div>Job Description: <input type="text" name="JobDescription" id="JobDescription" /></div>


    <div>Salary : <input type="text" name="Salary" id="Salary" /></div>
    <div>Start Date: <input type="datetime" name="StartDate" id="StartDate" /></div>


    <div>Published 
        <input type="radio" value="yes" />
    <input type="radio" value="no" />
    </div>
    <div>
        Department:
        <select id="DepartmentID" typeof="text" name="DepartmentID">
            @{
                foreach (var department in Model)
                {
                    <option value="@department.DepartmentId">@department.DepartmentName</option>
                }



            }
        </select>



    </div>


    <div><input type="submit" value="Add Job" /></div>
</form>
<a href="/JobListing/List">Back to list</a>


@section Scripts {
    <script>
        $(function () {
            $("#StartDate").datepicker();
        })
    </script>
    }