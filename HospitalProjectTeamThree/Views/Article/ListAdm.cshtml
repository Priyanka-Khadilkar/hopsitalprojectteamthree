<div>
        <a href="/Article/Add">Add new Article</a>
        <a href="/Crisis/Add">Add new Crisis</a>
</div>

<h1 class="crisiscenter">All Articles</h1>


<div class="crisiscontainer">
    <aside class="left">
        <ul>
            @{
                foreach (var listcrisis in Model.listcrises)
                {
                    <li><a href="/Crisis/ViewCrisis/@listcrisis.CrisisId">@listcrisis.CrisisName</a></li>
                    <button><a href="/Crisis/Delete/@listcrisis.CrisisId">Delete</a></button>
                    <button><a href="/Crisis/Update/@listcrisis.CrisisId">Update</a></button>
                                       
                }
            }
        </ul>
    </aside>
    <main class="crisismain">

        @{


            foreach (var article in Model.articles)
            {


                <p></p>

                <h2>@article.ArticleTitle</h2>

                <div class="cred">

                    <span class="auth">Author: @article.ArticleAuthor</span>
                    <span class="publ">Published: @article.DatePosted</span>
                </div>
                <p>@article.ArticleContent </p>
                <button><a href="/Article/ViewArticle/@article.ArticleId"> Click To Read</a></button>
                <button><a href="/Article/Delete/@article.ArticleId"> Delete Article</a></button>
                <hr />
            }
        }
        <div class="paginate">
            @{
                <a href="/Article/List?pagenum=@((int)ViewData["pagenum"]-1)&articlesearchkey=@ViewData["articlesearchkey"]">Prev</a>
                @ViewData["pagesummary"]
                <a href="/Article/List?pagenum=@((int)ViewData["pagenum"]+1)&articlesearchkey=@ViewData["articlesearchkey"]">Next</a>
            }
        </div>
    </main>
