@model HospitalProjectTeamThree.Models.ViewModels.AddUpdateMedicalStaffDirectory
    @{
        ViewBag.Title = "Add";
    }

    <h2>Add Staff</h2>

    <form method="post" action="/MedicalStaffDirectory/Add">
        <div class="form-group">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Department Name:</label>
                <select class="custom-select mr-sm-2" type="text" name="DepartmentID" id="DepartmentID">
                    @{

                        foreach (var department in Model.Departments)
                        {
                            <option value="@department.DepartmentId">@department.DepartmentName</option>

                        }
                    }
                </select>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Staff Member Name:</label>
                <select class="custom-select mr-sm-2" type="text" name="UserId" id="UserId">
                    @{

                        foreach (var user in Model.Users)
                        {
                            <option value="@user.Id">@user.FirstName</option>

                        }
                    }
                </select>
            </div>

            <div class="form-group row">
                <button class="btn btn-dark" type="submit">Add Staff</button>
            </div>
        </div>
    </form>
