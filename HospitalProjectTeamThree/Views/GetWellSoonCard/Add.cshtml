@model HospitalProjectTeamThree.Models.ViewModels.AddGetWellCard

@{
    ViewBag.Title = "Add";
}

<h2>Add a category</h2>
<form class="add" method="post" action="/GetWellSoonCard/Add">
    <div>
        Choose a card:
        @{
            foreach (var design in Model.CardDesigns)
            {
                <img src="../../Images/GetWellCard/@(design.CardDesignId).@(design.PicExt)" alt="Image of the card" />
                <input type="radio" name="CardDesignId" value="@(design.CardDesignId)" />
            }
        }
    </div>

    <div>Patient Full Name: <input type="text" name="PatientName" id="PatientName" /></div>
    <div>Room Number: <input type="text" name="RoomNumber" id="RoomNumber" /></div>
    <div>Patient Email: <input type="text" name="PatientEmail" id="PatientEmail" /></div>
    <div>Message: <textarea type="text" name="message" id="message"></textarea></div>
    <div><input type="submit" value="Add the card" /></div>
</form>
<a href="/GetWellSoonCard/List">Back to list</a>