@model HospitalProjectTeamThree.Models.GetWellSoonCard

@{
    ViewBag.Title = "Add";
}

<h2>Add a category</h2>
<form class="add" method="post" action="/GetWellSoonCard/Add">
    <div>
        Choose a card:

        <img src="../../Images/GetWellCard/1.png" alt="Image of the card" />
        <input type="radio" name="CardDesignNumber" value="1.png" />
        <img src="../../Images/GetWellCard/2.png" alt="Image of the card" />
        <input type="radio" name="CardDesignNumber" value="2.png" />
        <img src="../../Images/GetWellCard/3.jpg" alt="Image of the card" />
        <input type="radio" name="CardDesignNumber" value="3.jpg" />
        <img src="../../Images/GetWellCard/4.jpg" alt="Image of the card" />
        <input type="radio" name="CardDesignNumber" value="4.jpg" />
        <img src="../../Images/GetWellCard/5.jpg" alt="Image of the card" />
        <input type="radio" name="CardDesignNumber" value="5.jpg" />
    </div>
    
    <div>Patient Full Name: <input type="text" name="PatientName" id="PatientName" /></div>
    <div>Room Number: <input type="text" name="RoomNumber" id="RoomNumber" /></div>
    <div>Patient Email: <input type="text" name="PatientEmail" id="PatientEmail" /></div>
    <div>Message: <textarea type="text" name="message" id="message"></textarea></div>
    <div><input type="submit" value="Add the card" /></div>
</form>
<a href="/GetWellSoonCard/List">Back to list</a>