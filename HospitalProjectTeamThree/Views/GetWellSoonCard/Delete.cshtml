@model HospitalProjectTeamThree.Models.ViewModels.ShowGetWell
@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this card?</h2>
<div class="col-md-4 col-sm-4">
    <div>Card Desgin:</div>
    <img src="~/Images/GetWellCard/@(Model.CardDesign.CardDesignId).@(Model.CardDesign.PicExt)" />
</div>
<div class="col-md-4 col-sm-4">
    <div>Patient Name: @Model.GetWellSoonCard.PatientName</div>
    <div>Room Number: @Model.GetWellSoonCard.RoomNumber</div>
</div>
<div class="col-md-4 col-sm-4">
    <div>Patient Email: @Model.GetWellSoonCard.PatientEmail</div>
    <div>Message: @Model.GetWellSoonCard.Message</div>
    <div><a href="/GetWellSoonCard/Update/@Model.GetWellSoonCard.CardId">Edit the card</a></div>
    <div><a href="/GetWellSoonCard/Delete/@Model.GetWellSoonCard.CardId">Delete the card</a></div>
</div>

<form method="Post" action="/GetWellSoonCard/Delete/@Model.GetWellSoonCard.CardId">
    <input type="hidden" name="CardId" value="@Model.GetWellSoonCard.CardId" />
    <input type="submit" value="Yes" class="btn btn-warning"/>
    <a href="/GetWellSoonCard/List">No, go back to list</a>
</form>