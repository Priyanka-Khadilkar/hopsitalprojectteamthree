@model HospitalProjectTeamThree.Models.GetWellSoonCard
@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this card?</h2>
<div><img src="~/Images/GetWellCard/@Model.CardDesignNumber" /></div>
<form method="Post" action="/GetWellSoonCard/Delete/@Model.CardId">
    <input type="hidden" name="CardId" value="@Model.CardId" />
    <input type="submit" value="Yes" />
    <a href="/GetWellSoonCard/List">No, go back to list</a>
</form>