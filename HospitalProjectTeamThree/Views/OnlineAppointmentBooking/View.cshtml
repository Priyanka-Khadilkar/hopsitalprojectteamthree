@model HospitalProjectTeamThree.Models.OnlineAppointmentBooking
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="btn-floatright">
    <a href="/OnlineAppointmentBooking/List" class="btn btn-primary bottom-margin-10">Back to Appointment List</a>
</div>
<h1>Online Appointment</h1>
<div class="panel panel-primary top">
    <div class="panel-heading header-color">
        View Appointment
        <!--Only Admin and Editor can Edit the Appointment Details-->
        @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
        {
            <a href="/OnlineAppointmentBooking/Update/@Model.OnlineAppointmentBookingId" class="deleteicon marginright45" title="Click to Update"><span class="glyphicon glyphicon-pencil"></span></a>
        }
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <!--If Logged in user is admin or Editor then add extra fields-->
            @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
            {
                <div class="form-group">
                    <label class="control-label col-sm-2" for="Name">Patient First Name:</label>
                    <div class="col-sm-10">
                        <label class="control-label font-weight500"> @Model.User.FirstName</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="Name">Patient First Name:</label>
                    <div class="col-sm-10">
                        <label class="control-label font-weight500"> @Model.User.LastName</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="Name">Patient Email:</label>
                    <div class="col-sm-10">
                        <label class="control-label font-weight500"> @Model.User.Email</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="Name">Patient Phone Number:</label>
                    <div class="col-sm-10">
                        <label class="control-label font-weight500"> @Model.User.PhoneNumber</label>
                    </div>
                </div>
            }
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Date Of Birth :</label>
                <div class="col-sm-10">
                    <label class="control-label font-weight500"> @Model.PatientDateOfBirth.ToString("MM/dd/yyyy")</label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Preferred Date :</label>
                <div class="col-sm-10">
                    <label class="control-label font-weight500"> @Model.PreferredDate.ToString("MM/dd/yyyy")</label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Preferred Time :</label>
                <div class="col-sm-10  clockpicker">
                    <label class="control-label font-weight500">@Model.PreferredTime </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Preferred Doctor :</label>
                <div class="col-sm-10">
                    <label class="control-label font-weight500"> @Model.PreferredDoctor</label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Status :</label>
                <div class="col-sm-10">
                    @{
                        var status = Enum.GetName(typeof(HospitalProjectTeamThree.Models.OnlineAppointmentBookingStatus),
                        Convert.ToInt32(Model.OnlineAppointmentBookingStatus));
                        if (status == "InProcess")
                        {
                            status = "In Process";
                        }
                    }
                    <label class="control-label font-weight500"> @status</label>
                </div>
            </div>
        </form>
    </div>
</div>


