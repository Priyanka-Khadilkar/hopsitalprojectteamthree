@model HospitalProjectTeamThree.Data.ApplicationUser
@{
    ViewBag.Title = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="btn-floatright">
    <a href="/OnlineAppointmentBooking/List" class="btn btn-primary bottom-margin-10">Back to Appointment List</a>
</div>
<h1>Online Appointment</h1>
<div class="panel panel-primary top">
    <div class="panel-heading header-color">
        Book an Appointment
    </div>
    <div class="panel-body">
        <form class="form-horizontal" method="post" action="/OnlineAppointmentBooking/Book">
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Name:</label>
                <div class="col-sm-10">
                    <input type="text" disabled class="form-control" id="Name" value="@Model.FirstName @Model.LastName" placeholder="Enter name" >
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Email:</label>
                <div class="col-sm-10">
                    <input type="text" disabled class="form-control" id="Name" value="@Model.Email" placeholder="Enter name" name="Name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Phone Number:</label>
                <div class="col-sm-10">
                    <input type="text" disabled class="form-control" value="@Model.PhoneNumber" id="Name" placeholder="Enter name" name="Name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Date Of Birth :</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="DateOfBirth" placeholder="MM/DD/YYYY" name="DateOfBirth">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Preferred Date :</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="PreferredDate" placeholder="MM/DD/YYYY" name="PreferredDate">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Preferred Time :</label>
                <div class="col-sm-10  clockpicker">
                    <input type="text" id="PreferredTime" placeholder="Select Preferred Time" name="PreferredTime" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Preferred Doctor :</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="PreferredDoctor" placeholder="Enter Preferred Doctor" name="PreferredDoctor">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" id="BtnSubmit" class="btn btn-success">Book</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script>
        $(function () {
            //set the datepicker 
            $("#PreferredDate").datepicker();
            $("#DateOfBirth").datepicker();
            //set the clock picker
            $('.clockpicker').clockpicker({
                donetext: 'Done'
            });

        });
    </script>
}
