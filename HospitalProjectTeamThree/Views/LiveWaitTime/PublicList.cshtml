
    @{
        ViewBag.Title = "PublicList";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <h1>Live Wait Times</h1>
    <div class="panel panel-primary top">
        <div class="panel-heading header-color">
            List of Departments
        </div>
        <div class="panel-body">
            <table class="table table-dark top">
                <thead>
                    <tr>
                        <th scope="col">Department</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var Department in Model)
                        {
                            <tr>
                                <td>
                                    @Department.DepartmentName
                                </td>
                                <td>
                                    <a href="/LiveWaitTime/PublicShow/@Department.DepartmentId">View Updates</a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
