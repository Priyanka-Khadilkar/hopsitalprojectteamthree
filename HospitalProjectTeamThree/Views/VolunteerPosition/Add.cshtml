@model HospitalProjectTeamThree.Models.ViewModels.AddVolunteerPosition



@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="panel panel-primary top">
    <div class="panel-heading header-color">
        Add a Volunteer Position
    </div>
    <div class="panel-body">
<form class="form-horizontal" enctype="multipart/form-data" method="post" action="/VolunteerPosition/Add">
   <div class="form-group">
        <label class="control-label col-sm-2" for="VolunteerPositionTitle"> Title:</label>
    <div class="col-sm-10"> 
        <input type="text" class="form-control" name="VolunteerPositionTitle" id="VolunteerPositionTitle" placeholder="Enter Volunteer Position Title"/>
    </div>
   </div>
   <div class="form-group">
       <label class="control-label col-sm-2" for="VolunteerPositionDescription"> Description: </label>
       <div class="col-sm-10">
           <input type="text" class="form-control" name="VolunteerPositionDescription" id="VolunteerPositionDescription" placeholder="Enter Volunteer Position Description"/>
       </div>
   </div>
   <div class="form-group">
       <label class="control-label col-sm-2" for="StartDate">Start Date:</label>
       <div class="col-sm-10">
          <input type="datetime" class="form-control" name="StartDate" id="StartDate" />
       </div>
   </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="DepartmentID">Department:</label>    
        <select id="DepartmentID" typeof="text" name="DepartmentID">
            @{
                foreach (var department in Model.Departments)
                {
                    <option value="@department.DepartmentId">@department.DepartmentName</option>
                }

            }
        </select>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Add Volunteer Position" />
        </div>
    </div>
</form>
    </div>
    </div>

<a href="/VolunteerPosition/List">Back to list</a>


@section Scripts {
    <script>
        $(function () {
            $("#StartDate").datepicker();
           // CKEDITOR.replace("VolunteerPositionDescription")
        })

    </script>
}