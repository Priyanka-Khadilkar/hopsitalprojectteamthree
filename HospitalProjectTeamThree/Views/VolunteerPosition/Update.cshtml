@model HospitalProjectTeamThree.Models.ViewModels.UpdateVolunteerPosition
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="panel panel-primary top">
    <div class="panel-heading header-color">
        <h2>Update @Model.VolunteerPosition.VolunteerPositionTitle</h2>
    </div>
    <div class="panel-body">
        <div class="container-fluid">
            <form method="post" action="/VolunteerPosition/Update/@Model.VolunteerPosition.VolunteerPositionID">

                <div class="row">
                    <div class="col-md-9">


                        <div class="form-group">
                            <label class="control-label col-sm-2"> Title:</label>
                            <div class="col-sm-10">
                                <input type="text" name="VolunteerPositionTitle" value="@Model.VolunteerPosition.VolunteerPositionTitle" />
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-sm-2">Description:</label>
                            <div class="col-sm-10">
                                <input type="text" name="VolunteerPositionDescription" value="@Model.VolunteerPosition.VolunteerPositionDescription" />
                            </div>
                        </div>
                      
                        <div class="form-group">
                            <label class="control-label col-sm-2">Start Date:</label>
                            <div class="col-sm-10">
                                <input type="text" name="StartDate" value="@Model.VolunteerPosition.StartDate" />
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="control-label col-sm-2">Department</label>
                            <div class="col-sm-10">
                                <select id="DepartmentID" name="DepartmentID">
                                    @foreach (var department in Model.Departments)
                                    {
                                        var selected = "";
                                        if (Model.VolunteerPosition.DepartmentID == department.DepartmentId)
                                        {
                                            selected = "selected";
                                        }
                                        <option value="@department.DepartmentId" @selected>@department.DepartmentName</option>
                                    }
                                    }
                                </select>
                            </div>
                        </div>


                       
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <div>Current Volunteers:</div>
                            <ul>
                                @{
                                    foreach (var volunteer in Model.Users)
                                    {
                                        <li>@volunteer.FirstName</li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>


                    <input type="hidden" name="VolunteerPositionID" value="@Model.VolunteerPosition.VolunteerPositionID" />

                    <div class="form-group">
                   <div class="col-sm-6"><input type="submit" class="btn btn-primary btn-sm" value="Update" /></div>
                    </div>
                </div>
        </form>
        </div>



    </div>
</div>
                    
          

    



@section Scripts {
    <script>
        $(function () {
            $("#StartDate").datepicker();
        })


    </script>
}



